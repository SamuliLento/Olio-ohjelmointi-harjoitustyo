<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentHome">

    <Button
        android:id="@+id/btnCreateLutemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Create Lutemon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnListLutemons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="List Lutemons"
        app:layout_constraintEnd_toEndOf="@+id/btnCreateLutemon"
        app:layout_constraintStart_toStartOf="@+id/btnCreateLutemon"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateLutemon" />

    <Button
        android:id="@+id/btnMoveLutemons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Move Lutemons"
        app:layout_constraintEnd_toEndOf="@+id/btnListLutemons"
        app:layout_constraintStart_toStartOf="@+id/btnListLutemons"
        app:layout_constraintTop_toBottomOf="@+id/btnListLutemons" />
</androidx.constraintlayout.widget.ConstraintLayout>